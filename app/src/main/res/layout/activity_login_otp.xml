<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginOtpActivity">
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/loginOtpProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateDuration="3000"
        app:indicatorColor="@color/main_blue_color"
        app:trackThickness="5dp" />

    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/back_arrow_white"
        android:layout_below="@+id/loginOtpProgressBar"
        android:layout_margin="20dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/number_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/backbtn"
        android:gravity="center_horizontal|center_vertical"
        android:letterSpacing="0.08"
        android:text="@string/EnterOtpText"
        android:textSize="14sp"
        android:lineSpacingExtra="10dp"
        android:layout_marginHorizontal="20dp"
        tools:ignore="RtlSymmetry" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/otp_input"
        android:layout_below="@+id/number_textview"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="60dp">
        <EditText
            android:id="@+id/login_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="------"
            android:inputType="number"
            android:maxLength="6"
            android:letterSpacing="0.5"
            android:paddingStart="15dp"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry,VisualLintTextFieldSize" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/resend_otp_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otp_input"
        android:gravity="center"
        android:letterSpacing="0.08"
        android:layout_marginTop="25dp"
        android:text="@string/resend_otp_in_30_seconds"
        android:textColorHint="@color/material_blue_grey_80"
        android:textSize="12sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_next_btn"
        android:layout_width="150dp"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/green"
        android:layout_centerHorizontal="true"
        android:text="VERIFY"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        android:layout_marginBottom="40dp"
        tools:ignore="MissingConstraints,VisualLintButtonSize" />
</RelativeLayout>
