<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frag_bg"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".LoginUserNameActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/source_sans3_bold"
        android:letterSpacing="0.08"
        android:paddingStart="30dp"
        android:text="Enter Username"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/login_username"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/input_border"
        android:fontFamily="@font/source_sans3_bold"
        android:hint="Username"
        android:inputType="text"
        android:paddingStart="15dp"
        android:elevation="5dp"
        android:textColor="@color/tagline"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        android:layout_marginVertical="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_letMeIn_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/std_btn"
        android:text="Let me In"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        android:layout_marginHorizontal="60dp"/>

    <ProgressBar
        android:id="@+id/login_progress_bar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:indeterminateTint="@color/teal_200"
        android:layout_marginVertical="20dp"
        tools:ignore="MissingConstraints" />

</LinearLayout>