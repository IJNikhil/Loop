<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginUserNameActivity">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/loginUsernameProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateDuration="3000"
        app:indicatorColor="@color/main_blue_color"
        app:trackThickness="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:letterSpacing="0.08"
            android:paddingStart="30dp"
            android:text="@string/enter_username"
            android:textSize="20sp"
            tools:ignore="MissingConstraints,RtlSymmetry" />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            android:background="@drawable/input_border"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="20dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_username"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="@string/username"
                android:textSize="20sp"
                android:paddingStart="15dp"
                tools:ignore="MissingConstraints,RtlSymmetry,VisualLintTextFieldSize"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_letMeIn_btn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            style="@style/TextAppearance.AppCompat.Widget.Button.Inverse"
            android:text="@string/let_me_in"
            android:textSize="16sp"
            app:cornerRadius="10dp"
            tools:ignore="MissingConstraints,VisualLintButtonSize"
            android:layout_marginHorizontal="60dp"/>
    </LinearLayout>

