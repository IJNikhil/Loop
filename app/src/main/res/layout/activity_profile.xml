<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileActivity">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/profileProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateDuration="3000"
        app:indicatorColor="@color/main_blue_color"
        app:trackThickness="5dp" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/back_btn"
        android:src="@drawable/back_arrow_white"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:importantForAccessibility="no"/>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Material3.Button.TextButton"
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Logout"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/profile_image_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/back_btn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/profilebg"
        android:src="@drawable/person_filled"
        android:scaleType="centerCrop"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:id="@+id/profile_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image_view"
        android:layout_marginHorizontal="60dp"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="20dp"
        android:hint="Username"
        android:inputType="text"
        android:minHeight="48dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_username"
        android:text="+000000000000"
        android:minHeight="48dp"
        android:textSize="16sp"
        android:enabled="false"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_update_btn"
        android:layout_width="150dp"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/green"
        android:layout_centerHorizontal="true"
        android:text="UPDATE"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        android:layout_marginBottom="40dp"
        tools:ignore="MissingConstraints,VisualLintButtonSize" />
</RelativeLayout>