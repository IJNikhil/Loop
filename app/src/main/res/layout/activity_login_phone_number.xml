<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPhoneNumberActivity">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/loginPhoneProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateDuration="3000"
        app:indicatorColor="@color/main_blue_color"
        app:trackThickness="5dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/verifyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:letterSpacing="0.08"
        android:layout_below="@+id/loginPhoneProgressBar"
        android:layout_marginTop="40dp"
        android:text="Veify your phone number"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/LoginPhoneInfoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:letterSpacing="0.08"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/verifyText"
        android:lineSpacingExtra="5dp"
        android:text="@string/LoginPhoneInfoText"
        android:paddingHorizontal="24dp"
        android:gravity="center_horizontal"
        android:textSize="14sp"
        tools:ignore="MissingConstraints,RtlSymmetry"/>
    <com.hbb20.CountryCodePicker
        android:id="@+id/ccp"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LoginPhoneInfoText"
        app:ccp_showArrow="true"
        app:ccp_showFlag="true"
        app:ccp_showNameCode="true"
        app:ccp_showPhoneCode="false"
        app:ccp_areaCodeDetectedCountry="true"
        app:ccp_textSize="16sp"
        android:layout_marginTop="26dp"
        android:gravity="center"
        app:ccpDialog_backgroundColor="@style/Widget.AppCompat.Light.ActionMode.Inverse"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ccp"
        android:hint="@string/phone"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="16dp"
        android:textSize="16sp"
        android:inputType="phone"
        android:layout_marginHorizontal="40dp"
        android:layout_gravity="center_horizontal">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:paddingStart="20dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/send_otp_btn"
        android:layout_width="150dp"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/green"
        android:layout_centerHorizontal="true"
        android:text="NEXT"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        android:layout_marginBottom="40dp"
        tools:ignore="MissingConstraints,VisualLintButtonSize" />
</RelativeLayout>