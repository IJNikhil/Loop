<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPhoneNumberActivity">
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/loginPhoneProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateDuration="3000"
        app:indicatorColor="@color/main_blue_color"
        app:trackThickness="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:letterSpacing="0.08"
            android:paddingStart="30dp"
            android:text="@string/enter_mobile_number"
            android:textSize="20sp"
            tools:ignore="MissingConstraints,RtlSymmetry" />
        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ccp_showArrow="true"
            app:ccp_showFlag="true"
            app:ccp_showNameCode="true"
            app:ccp_showPhoneCode="false"
            app:ccp_areaCodeDetectedCountry="true"
            app:ccp_textSize="16sp"
            android:layout_marginTop="16dp"
            app:ccpDialog_backgroundColor="@style/Widget.AppCompat.Light.ActionMode.Inverse"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="40dp"
            android:layout_gravity="center_horizontal"
            android:hint="@string/phone"
            android:inputType="phone"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:layout_marginBottom="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="56dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <!--    </LinearLayout>-->

        <!-- Auto layout, variables, and unit scale are not yet supported -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/send_otp_btn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            style="@style/TextAppearance.AppCompat.Widget.Button.Inverse"
            android:text="@string/send_otp"
            android:textSize="16sp"
            app:cornerRadius="10dp"
            tools:ignore="MissingConstraints,VisualLintButtonSize"
            android:layout_marginHorizontal="60dp"/>

    </LinearLayout>





