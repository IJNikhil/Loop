<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashBoard">

    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/main_layout_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loop"
        android:textSize="22sp"
        android:layout_marginHorizontal="20dp"
        style="@style/Widget.MaterialComponents.TextView"
        android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/main_profile_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:contentDescription="TODO"
                android:src="@drawable/person_filled"
                android:layout_centerVertical="true"
                android:background="@drawable/profilebg"
                style="@style/Widget.Material3.Chip.Input.Icon.Elevated"
                tools:ignore="ContentDescription,HardcodedText" />
    </RelativeLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/main_layout_toolbar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:padding="15dp"
        android:id="@+id/recent_user_recycler_view" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/search_main_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
        android:elevation="16dp"
        android:backgroundTint="@color/green"
        app:icon="@drawable/icon_search"
        android:text="Search"
        app:extendStrategy="auto"/>

</RelativeLayout>